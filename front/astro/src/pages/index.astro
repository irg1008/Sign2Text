---
import Layout from "layout/main.astro"
import FileDrop from "components/file-drop.svelte"
---

<Layout>
	<div class="flex flex-col gap-10">
		<img src="logo.avif" alt="Logo" class="w-full max-w-sm drop-shadow-xl" />
		<h1 class="text-xl leading-relaxed text-center sm:text-2xl md:text-3xl text-neutral-400">
			Drag and drop your video here
		</h1>
	</div>
	<section class="flex flex-col gap-8">
		<FileDrop client:load />
	</section>
</Layout>